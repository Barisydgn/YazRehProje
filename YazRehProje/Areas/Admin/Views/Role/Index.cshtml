@model IEnumerable<Entities.DTO.UserDto.UserRoleDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="fw-bolder text-center " style="color:darkred">User  Listesi</h1>






<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">User ID</th>
            <th scope="col">Kullanıcı Adı</th>
            <th scope="col">Mail Adresi</th>
            <th scope="col">Rol</th>
            <th scope="col">İşlem</th>            
            <th scope="col">İşlem</th>            
        </tr>
    </thead>
    @foreach (var user in Model)
    {
        <tbody>
            <tr>
                <th scope="row">@user.UserId</th>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@string.Join(", ", user.Roles)</td>

                <td><a class="btn btn-danger" asp-area="Admin" asp-controller="Role" asp-action="DeleteRol" asp-route-id="@user.UserId"> <i class="fa fa-trash" aria-hidden="true"></i>   Sil</a></td>
                <td><a asp-area="Admin" asp-controller="Role" asp-action="UpdateRole" class="btn btn-success" asp-route-id="@user.UserId"><i class="fa fa-arrow-right" aria-hidden="true"></i>    Role Ekle</a></td>
            </tr>
        </tbody>
    }



</table>