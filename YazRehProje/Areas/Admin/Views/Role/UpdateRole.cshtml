@model Entities.DTO.UserDto.UserRoleDto2
@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="fw-bolder text-center " style="color:darkred">@Model.UserName User  Role Ekleme</h1><br />

<form asp-area="Admin" asp-controller="Role" asp-action="UpdateRole" method="post" >

    <input type="hidden" asp-for="UserId" />
    <input type="hidden" asp-for="Email" />
    <input type="hidden" asp-for="UserName" />


    <div class="mb-2 col-md-6 mx-auto">
      
        <select asp-for="roleName" id="inputState" class="form-control">
            <option selected>Lütfen Rol Seçin</option>
            @foreach (var role in Model.Roles)
            {
                <option value="@role.Name"> @role.Name </option>
            }
        </select>
    </div>


