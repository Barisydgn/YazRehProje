@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Employee";
    Layout = "~/Views/SharedNew/_Layout.cshtml";
}

<h1>Personeller</h1>

@if (Model.Count() == 0)
{
        <div class="alert alert-danger" role="alert">
           Kayıt Bulunamadı
        </div>
}
else
{
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Ad Soyad</th>
              <th scope="col">Ünvan</th>
              <th scope="col">Yas</th>
              <th scope="col">Cinsiyet</th>
              <th scope="col">Detay</th>
            </tr>
          </thead>
          <tbody>
            @foreach (var item in Model)
            {
                            <tr>
                      <th scope="row">@item.EmployeeId</th>
                      <td>@item.Name &nbsp; @item.Surname</td>
                      <td>@item.Title</td>
                      <td>@item.Age</td>
                    <td>@item.GenderStatus</td>
                    <td><a asp-controller="Yaz" asp-action="EmployeeDetails" class="btn btn-info" asp-route-id="@item.EmployeeId">Detay</a></td>
                       </tr>
            }


          </tbody>
        </table>
}

