
@{
    ViewData["Title"] = "ResetPassword2";
    Layout = "~/Views/SharedNew/_Layout.cshtml";
}

<h1 class="fw-bolder text-center " style="color:darkred">Şifre Sıfırlama</h1>
@if (ViewBag.ErrorMessage != null)
{
    <span> @ViewBag.ErrorMessage</span>
}

<h2>Mail Adresi @TempData["Mail"]</h2>

<div class="container ">
    <div class="row justify-content-center">
    <div class="col-md-4">
            <form asp-controller="Account" asp-action="ResetPassword2" method="post">
                 <div class="form-group">
                    <label>Mail Adresi </label>
                    <input type="hidden" class="form-control" name="mail" value="@TempData["Mail"]"><br />
                </div>
                <input type="hidden" class="form-control" name="code" value="@TempData["Code"]" />

                <div class="form-group">
                    <label>Lütfen Mail Adresinize Gelen 6 Haneli Kodu Giriniz </label>
                    <input type="text" class="form-control" name="userCode" required ><br />
                </div>

                <div class="form-group">
                    <label>Lütfen Yeni Şifrenizi Giriniz</label>
                    <input type="text" class="form-control" name="Password" required><br />
                </div>

                <button class="btn btn-primary">Şifreyi Güncelle</button>
            </form>
    </div>
  </div>
</div>



